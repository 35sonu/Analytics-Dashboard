{
  "build": {
    "command": "cd apps/web && npm run build",
    "env": {
      "NEXT_PUBLIC_API_BASE_URL": "$NEXT_PUBLIC_API_BASE_URL",
      "NEXT_PUBLIC_APP_URL": "$NEXT_PUBLIC_APP_URL"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://your-api-url.vercel.app/api/:path*"
    }
  ]
}
